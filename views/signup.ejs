    <!------ Include the above in your HEAD tag ---------->

    <section class="signup-block">
        <div class="container-block">
            <div class="row">
                <div class="col-md-8 banner-sec photoface">
                    <div class="img">
                        <div id="sign_in_photo" class="image">
                            <!-- <img src="images/7.jpg" alt="signin" class="img-box"> -->
                            <div class="img-caption d-none d-md-block">
                                <div class="content font-yoon">
                                    <h3>TWTJ MALL is special for you.</h3>
                                    <p>You can sign up freely. Welcome!!
                                        <br>You can enjoy shopping here^^.</br></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 login-sec sign-box">
                    <h2 class="text-center font-yoon">Sign Up!</h2>
                    <script>
                        function check() {
                            const email = fn.user_email.value
                            const pw = fn.user_pw.value
                            const name = fn.user_name.value
                            const Id = fn.user_Id.vlaue

                            if (email == "" || pw == "" || Id == "" || name == "") {
                                alert("정보를 모두 입력하세요")
                                return false;
                            } else if (email == "") {
                                alert("E-mail을 작성하세요")
                                user_email.focus();
                                return false;
                            } else if (pw == "") {
                                alert("비밀번호를 입력하세요");
                                user_pw.focus();
                                return false;
                            } else if (name == "") {
                                alert("이름을 입력하세요")
                                user_name.focus();
                                return false;
                            } else if (Id == "") {
                                alert("ID를 입력하세요")
                                user_Id.focus();
                                return false;
                            }
                            else return true;
                        }
                    </script>
                    <form name="fn" action="/API_USER/user/signup" onsubmit="return check()" method="post">
                        <div class="form-group">
                            <label for="exampleInputname1" class="text-uppercase font-yoon">Name : </label>
                            <input type="text" class="form-control" name="user_name" placeholder="Please enter Name.">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputId1" class="text-uppercase font-yoon">Id : </label>
                            <input type="text" class="form-control" name="user_Id" placeholder="Please enter ID.">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1" class="text-uppercase font-yoon">Password : </label>
                            <input type="password" class="form-control" name="user_pw"
                                placeholder="Please enter Password.">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1" class="text-uppercase font-yoon">E-mail : </label>
                            <input type="text" class="form-control" name="user_email"
                                placeholder="Please enter E-mail.">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputAge" class="text-uppercase font-yoon">Age : </label>
                            <input type="number" min ="0" class="form-control" name="user_age" placeholder="Please enter age">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputGender" class="text-uppercase font-yoon">Gender : </label>
                            <p style="text-align:center"><input type="radio" name="gender" value="0" >Male <input style="margin-left: 1rem;"type="radio" name="gender"                                    value="1">Female</p>
                        </div>

                    </form>


                    <div class="copy-text">Created with <i class="fa fa-heart"></i> by TWTJ</div>
                </div>

            </div>
